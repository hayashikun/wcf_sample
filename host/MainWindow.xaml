<Window x:Class="host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:host"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Host" FontSize="20" FontWeight="Bold" />

            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                <Label Content="Text" />
                <TextBox x:Name="TextTextBox" Width="100" Margin="10,0,0,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                <Label Content="Number" />
                <TextBox x:Name="NumberTextBox" Width="100" Margin="10,0,0,0" />
            </StackPanel>

            <Slider x:Name="Slider" Margin="20,20,20,0"/>

        </StackPanel>
    </Grid>
</Window>
